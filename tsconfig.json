{
  "files": [
    "src/server/server.ts",
    "src/types/custom.d.ts"
  ],
  "include": [
    "server/**/*.ts",
    "config/**/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es2015",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types/*"
    ],
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./server/types/*"
      ]
    }
  }
}